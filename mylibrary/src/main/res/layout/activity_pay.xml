<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/activity_nor_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="易付24小时客服QQ号：12345678，客服电话：87654321"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"


        >
        <TextView
            android:id="@+id/tv_cashier_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥88.00"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/tv_cashier_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值88.00元金币"
            android:textSize="14sp"
            android:layout_below="@id/tv_cashier_money"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：637281637218362173"
            android:textSize="14sp"
            android:layout_below="@id/tv_cashier_money2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付方式"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
            android:id="@+id/rl_alipay"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EBEBEB"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#EBEBEB"/>
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_alipay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/navy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_pay"
                />


            <CheckBox
                android:id="@+id/cb_alipay"
                android:layout_width="18dp"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:layout_marginRight="15dp"
                android:background="@drawable/green_checkbox"
                android:layout_height="18dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wechat_pay"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EBEBEB"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#EBEBEB"/>
            <ImageView
                android:id="@+id/iv_pay_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_wechat"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_pay_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/navy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_pay_wechat"
                />

            <CheckBox
                android:button="@null"
                android:id="@+id/cb_wxpay"
                android:layout_width="18dp"
                android:clickable="false"
                android:layout_height="18dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/green_checkbox"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="216dp"
        android:layout_height="44dp"
        android:id="@+id/tv_pay_confirm"
        android:background="@drawable/tv_shape"
        android:text="确认 "
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付遇到问题？"
            />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助中心"
            android:layout_toRightOf="@id/tv_issue"
            android:textColor="#3ed29e"
            />

    </RelativeLayout>

</LinearLayout>
